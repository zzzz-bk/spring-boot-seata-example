<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.seata.account.provider.dal.mappers.AccountMapper">
    <resultMap id="baseResultMap" type="com.example.seata.account.provider.dal.entitys.Account">
        <id property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="balance" column="balance"/>
    </resultMap>
    <sql id="Base_Column_List">
        id,user_id,balance
    </sql>
    <update id="decreaseAccount">
        update tbl_account set balance=balance-#{balance} where user_id = #{userId} and balance>0
    </update>
    
    <sql id="testGlobalLock">
        select * from tbl_account where user_id=#{userId} for update
    </sql>
</mapper>